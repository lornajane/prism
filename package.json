{
  "private": true,
  "name": "prism",
  "license": "Apache-2.0",
  "version": "3.0.0-pre",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tslint -p packages/tsconfig.json",
    "typecheck": "tsc --build ./packages/tsconfig.json",
    "build": "tsc --build ./packages/tsconfig.build.json",
    "build.watch": "tsc --build --watch ./packages/tsconfig.build.json",
    "posttest": "yarn lint",
    "test": "yarn test.ci",
    "test.ci": "jest --maxWorkers=2",
    "test.coverage": "yarn test --coverage",
    "test.watch": "yarn test --watchAll",
    "test.update": "yarn test.fast --updateSnapshot",
    "release": "lerna version prerelease --conventional-commit"
  },
  "devDependencies": {
    "@stoplight/types": "4.x.x",
    "@types/chance": "1.0.x",
    "@types/jest": "24.x.x",
    "@types/node": "12.x.x",
    "chance": "1.0.x",
    "jest": "24.x.x",
    "lerna": "3.13.4",
    "ts-jest": "24.x.x",
    "tslint": "5.16.0",
    "tslint-config-stoplight": "1.x.x",
    "typescript": "3.x.x"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "tag": "beta"
  },
  "dependencies": {}
}
